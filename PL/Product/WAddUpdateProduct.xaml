<Window x:Class="PL.WAddUpdateProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="AddProduct" Height="450" Width="800"
         DataContext="{Binding RelativeSource={RelativeSource self}}">

    <Grid Name="MainGrid" DataContext="{Binding ProductToUpOrAdd}">

        <ListView  Name="listViewAdd" Margin="274,0,274,0" >

            <Label Content="ID"/>
            <TextBox   TextWrapping="Wrap" Width="120" Name="id" Text="" TextChanged="id_TextChanged" />
            <Label Content="Category"/>
            <ComboBox Name="AttributeSelector" Grid.Column="1" Width="119" Height="19" SelectedItem="{Binding Category,Mode=TwoWay}" />
            <Label Content="Name"/>
            <TextBox TextWrapping="Wrap"  Width="120" Name="name" Text="" TextChanged="name_TextChanged"/>
            <Label Content="Price"/>
            <TextBox TextWrapping="Wrap"  Width="120" Name="price" Text="" TextChanged="price_TextChanged"/>
            <Label Content="In Stock" />
            <TextBox TextWrapping="Wrap"  Width="120" Name="inStock" Text="" TextChanged="inStock_TextChanged"/>

            <!--<TextBox TextWrapping="Wrap" Text="TextBox" Width="120"/>-->

        </ListView>
        <Button Content="{Binding Source={x:Static local:WAddUpdateProduct.MyContent}}" Grid.Row="1" HorizontalAlignment="Left" Margin="666,5,0,10" Padding="5" Width="85" Click="Button_Click_Add_update"  Name="addUpdate" />

        <Grid.RowDefinitions>
            <RowDefinition Height="351*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="33*"/>
        </Grid.RowDefinitions>
    </Grid>

</Window>
