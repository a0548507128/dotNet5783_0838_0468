<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/2.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <Button Name="manager" Content="manager" HorizontalAlignment="Center" Margin="0,64,0,0" VerticalAlignment="Top" Click="Admin_Click" Width="360" Height="35" FontSize="16" BorderBrush="#FF42AAC3" BorderThickness="2,2,2,2" FontFamily="Segoe UI Emoji" />
        <Button Name="NewOrder" Content="new order" HorizontalAlignment="Center" Margin="0,122,0,0" VerticalAlignment="Top"  Width="360" Height="33" Click="NewOrder_Click" FontSize="16" BorderBrush="#FF42AAC3" BorderThickness="2,2,2,2"/>
        <Button Name="OrderTracking" Content="order tracking" HorizontalAlignment="Center" Margin="0,183,0,0" VerticalAlignment="Top" Width="360" Height="34" Click="OrderTracking_Click" FontSize="16" BorderBrush="#FF42AAC3" BorderThickness="2,2,2,2"/>

    </Grid>
</Window>
