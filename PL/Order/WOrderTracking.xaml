<Window x:Class="PL.WOrderTracking"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="WOrderTracking" Height="450" Width="800"
        DataContext = "{Binding RelativeSource={RelativeSource Self}}">
    
    <Grid x:Name="oMainGrid">
        <Grid.Background>
            <ImageBrush ImageSource="/Product/3.jpg" Stretch="Uniform"/>
        </Grid.Background>
        <Label Content="enter id" HorizontalAlignment="Left" Margin="335,133,0,0" VerticalAlignment="Top" Width="51"/>
        <TextBox HorizontalAlignment="Left" Margin="416,141,0,0" TextWrapping="Wrap" Text="{Binding OrderId}" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged"/>
        <Button Content="show status" HorizontalAlignment="Center" Margin="0,184,0,0" VerticalAlignment="Top" Click="Show_Status_Click"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,249,0,0" TextWrapping="Wrap" Text="{Binding OrderTracking1}" VerticalAlignment="Top"/>
        <Button Content="order details" HorizontalAlignment="Left" Margin="686,358,0,0" VerticalAlignment="Top" Visibility="{Binding IsVisible1}" Click="Order_Details_Click" />
        <Label Content="{Binding message}" HorizontalAlignment="Left" Margin="39,368,0,0" VerticalAlignment="Top" Height="29" Width="114"/>
    </Grid>
</Window>
