<Window x:Class="PL.WOrderTracking"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="WOrderTracking" Height="450" Width="800"
        DataContext = "{Binding RelativeSource={RelativeSource Self}}">
    <Grid>
        <Label Content="enter id" HorizontalAlignment="Left" Margin="277,133,0,0" VerticalAlignment="Top" Width="72"/>
        <TextBox HorizontalAlignment="Left" Margin="349,141,0,0" TextWrapping="Wrap" Text="{Binding OrderId}" VerticalAlignment="Top" Width="120"/>
        <Button Content="show status" HorizontalAlignment="Center" Margin="0,184,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,249,0,0" TextWrapping="Wrap" Text="{Binding OrderTracking1, Mode=OneWay}" VerticalAlignment="Top"/>


    </Grid>
</Window>
